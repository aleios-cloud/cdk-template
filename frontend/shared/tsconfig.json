{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "composite": true,
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "outDir": "./dist/types"
  },
  "exclude": ["./dist"],
  "include": ["./**/*.ts", "./**/*.tsx"]
}
